<project
    name = "fty-outage"
    description = "Agent that sends alerts when device does not communicate."
    script = "zproject.gsl"
    email = "fty@eaton.com"
    url = "https://eaton.com/"
    license = "GPL-2.0+"
    >

    <target name = "debian" />
    <target name = "redhat" />

    <include filename = "license.xml" />
    <version major = "0" minor = "1" patch = "0" />

    <use project = "czmq" />
    <use project = "malamute" />

    <use project = "fty-proto" libname = "libfty_proto" prefix="fty_proto"
        min_major = "0" min_minor = "0" min_patch = "0"
        test = "fty_proto_test">
        <use project = "malamute"/>
    </use>

    <class name = "fty-outage-server">Bios outage server</class>
    <class name = "data" private = "1"> Data </class>

    <main  name = "fty-agent-outage" service = "1">Agent outage</main>

</project>
